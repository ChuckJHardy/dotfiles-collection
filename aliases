# Unix
alias e="$EDITOR"

# Bundler
alias be="bundle exec"

# Tmux
alias tmux="TERM=screen-256color-bce tmux"
alias t='tmux'

# Browser
alias gchrome="open -a 'Google Chrome' --args --allow-file-access-from-files"

# ZSH
alias zshcheat="open 'https://github.com/robbyrussell/oh-my-zsh/wiki/Cheatsheet'"

# Logs
alias alogs="tail -f log/development.log log/unicorn.log log/test.log /var/log/otbeach.log /var/log/apache2/access_log /var/log/apache2/error_log | egrep --color -E 'Parameters:|GET|PUT|DELETE|200|error|ERROR|==>|<==|$'"
