# Unix
alias e="$EDITOR"
alias ee="nvim"

alias q="vim ~/.zshrc"
alias qq="cd . && source ~/.zshrc"
alias cp="cp -iv"
alias rm="rm -iv"
alias mv="mv -iv"
alias ls="ls -FGh"
alias du="du -cksh"
alias df="df -h"
alias sed="sed -E" # Use modern regexps for sed, i.e. "(one|two)", not "\(one\|two\)"
alias curl-debug="command curl -vso /dev/null -H Fastly-debug:1" # Just print request/response headers
alias curl="curl --verbose"

# Use modern regexps for grep, and do show color when `grep` is the final
# command, but don't when piping to something else, because the added color
# codes will mess up the expected input.
alias grep="egrep --color=auto"
alias dup="pushd dotfiles && git checkout master && git pull && git checkout - && popd && qq" # dup = "dotfiles update"
alias \$='' # Copy-pasting `$ python something.py` works
alias diff="command diff --color=auto -u"
alias mkdir="command mkdir -p"
alias prettyjson="jq ."

# Bundler
alias be="bundle exec"

# Tmux
alias tmux="TERM=screen-256color-bce tmux"
alias t='tmux'
alias mux='tmuxinator'

# Browser
alias gchrome="open -a 'Google Chrome' --args --allow-file-access-from-files"

# ZSH
alias zshcheat="open 'https://github.com/robbyrussell/oh-my-zsh/wiki/Cheatsheet'"

# Logs
alias alogs="tail -f log/development.log log/unicorn.log log/test.log /var/log/otbeach.log /var/log/apache2/access_log /var/log/apache2/error_log | egrep --color -E 'Parameters:|GET|PUT|DELETE|200|error|ERROR|==>|<==|$'"
